<div class="toppage" style="margin: 20px;">
    <div class="row">
        <div class="col-md-4">
            <div class="schedule">
                <h3>予定一覧</h3>
            </div>

            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>タイトル</th>
                        <th>日程</th>
                    </tr>
                </thead>

                <tbody>
                    <% @blogs.each do |blog| %>
                        <tr>
                            <td><%= link_to(blog.title , blog) %></td>
                            <td><%= blog.start_time.strftime("%m-%d") %></td>
                        </tr>
                    <%end%>
                </tbody>
            </table>

            <%= link_to("予定追加", "blogs/new" ,class: "btn btn-primary") %>

        </div>

        <br>

        <br>
        <div class="col-md-8">
            <%= month_calendar events: @blogs do |date, blogs| %>
                <%= date.day %>

                <% blogs.each do |blog| %>
                    <div>
                        <%= link_to blog.title, blog %>
                    </div>
                <% end %>
            <% end %>
        </div>
    </div>
</div>