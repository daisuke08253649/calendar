<div class="new" style="width: 500px;">
    <%= form_with(model: @blog, local: true) do |form| %>
        <div class="form-group">
            <label for="blog_title">タイトル</label>
            <%= form.text_field :title, class: "form-control", id: "blog_title" %>
        </div>
        <div class="form-group">
            <label for="blog_content">内容</label>
            <%= form.text_field :content, class: "form-control", id: "blog_content" %>
        </div>
        <div class="form-group">
            <label for="blog_start_time">時間</label>
            <%= form.datetime_select :start_time, class: "form-control", id: "blog_start_time" %>
        </div>
        <div class="form-group">
            <%= form.submit "追加", class: "btn btn-primary" %>
        </div>
    <% end %>
</div>